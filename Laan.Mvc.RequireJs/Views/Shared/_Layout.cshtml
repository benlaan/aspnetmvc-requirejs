<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/App.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.datepicker.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/Libs/Modernizr/modernizr-2.5.3.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>ASP.NET MVC with RequireJs and experiments with javascript</h1>
            </div>
            <div id="logindisplay">
                Welcome <strong>@User.Identity.Name</strong>!
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("People", "Index", "Person")</li>
                    <li>@Html.ActionLink("Books", "Index", "Book")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer></footer>
    </div>
    @{var startJs = Html.StartJs();}
    @if (startJs != null)
    {
        <script type="text/javascript">
            document.__applicationVersion = '@Html.GetVersion()';
            document.__scriptsFolder = '@Html.ScriptsFolder()';
        </script>
        <script data-main="/@(Html.ScriptsFolder())/App/app-main" data-start="@startJs" src="/@(Html.ScriptsFolder())/Libs/Require/require.js"></script>
    }
    else
    {
        //These will be downloaded only if requireJs isn't initiated
        <script src="/@(Html.ScriptsFolder())/Libs/jquery/jquery-1.7.1.min.js"></script>
        <script src="/@(Html.ScriptsFolder())/Libs/knockout/knockout-3.0.0.js"></script>
    }

</body>
</html>
