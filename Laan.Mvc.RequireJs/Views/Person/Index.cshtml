<h2>People</h2>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birth Date</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: People">
        <tr>
            <td data-bind="text: Id"></td>
            <td><a data-bind="text: FirstName, attr: { href: 'Person/Edit/' + $data.Id }"></a></td>
            <td data-bind="text: LastName"></td>
            <td data-bind="text: BirthDate"></td>
        </tr>
    </tbody>
</table>
